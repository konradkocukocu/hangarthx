{
  "name": "Thanksy",
  "repository": "https://github.com/tooploox/thanksy",
  "success_url": "/",
  "env": {
    "AUTH_TOKEN": {
      "description": "A secret key needed for login in the client app.",
      "value": ""
    },
    "API_URL": "/"
  },
  "image": "heroku/ruby",
  "addons": [
    {
      "plan": "heroku-postgresql",
      "options": {
        "version": "10"
      }
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/ruby"
    },
    {
      "url": "heroku/nodejs"
    }
  ],
  "scripts": {
    "postdeploy": "bundle exec rake db:migrate"
  }
}
